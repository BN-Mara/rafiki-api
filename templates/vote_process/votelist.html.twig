							<option value="{{votem.id}}">{{votem.description}}</option>
						{% endfor %}
					</select>
  					<label class="input-group-text" for="inputGroupSelect02">
					<select name="currency" id="select" class="form-select" aria-label="Default select currency">									
						<option value="USD">USD</option>
