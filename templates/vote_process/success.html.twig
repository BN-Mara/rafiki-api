{% extends 'base.html.twig' %}

{% block title %}Merci::Rafiki!{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-4 mb-4">
    <div class="row d-flex cart align-items-center justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="d-flex justify-content-center border-bottom">
                    <div class="p-3">
                    <span class="text-bold">
                    Vous avez payé  <small class="text-muted">pour {{vote.numberOfVote}} vote(s)</small>
                    </span>
                        <!--<div class="progresses">
                            <div class="steps"> <span><i class="fa fa-check"></i></span> </div> <span class="line"></span>
                            <div class="steps"> <span><i class="fa fa-check"></i></span> </div> <span class="line"></span>
                            <div class="steps"> <span class="font-weight-bold">3</span> </div>
                        </div>-->
                    </div>
                </div>
                <div class="row g-0">
                    <div class="col-md-6 border-right p-5">
                        <div class="text-center order-details">
                            <div class="d-flex justify-content-center mb-5 flex-column align-items-center"> 
                                <span class="check1"><i class="fa fa-check"></i></span> 
                                <h2 class="font-weight-bold otto ">MERCI</h2> 
                                <small class="mt-2 ">Paiement effectué avec succès</small> 
                                <a href="#" class="text-decoration-none invoice-link"></a> 
                            </div> 
                            <a href="{{path('app_vote_process_start')}}" class="btn btn-dark btn-block order-button">Retour a l'accueil</a>
                        </div>
                    </div>
                    <div class="col-md-6 background-muted">
                        <div class="p-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center"> 
                            <span><i class="fa fa-clock-o text-muted"></i> Details</span>
                             <span class="check2"><i class="fa fa-check"></i></span>  </div>
                            <div class="mt-3">
                                <figure>
                                    <blockquote class="blockquote">
                                        <p>Votre vote a été enrégistré avec succès.</p>
                                    </blockquote>
                                    <figcaption class="blockquote-footer">
                                        N'hésitez pas de voter encore pour donner beaucoup plus de chance à votre artiste.
                                    </figcaption>
                                </figure>
                                <!--<div class="d-flex flex-column mt-3"> <small><i class="fa fa-check text-muted"></i> Vector file</small> <small><i class="fa fa-check text-muted"></i> Sources files</small> </div>-->
                            </div>
                        </div>
                        <div class="row g-0 border-bottom">
                            <div class="col-md-6 border-right">
                                <div class="p-3 d-flex justify-content-center align-items-center"> <span>Artiste</span> </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 d-flex justify-content-center align-items-center"> <span>{{artist.firstname}} {{artist.lastname}}</span> </div>
                            </div>
                        </div>
                        <div class="row g-0 border-bottom">
                            <div class="col-md-6">
                                <div class="p-3 d-flex justify-content-center align-items-center"> <span>Nombre de votes</span> </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 d-flex justify-content-center align-items-center"> <span>{{vote.numberOfVote}}</span> </div>
                            </div>
                        </div>
                        <div class="row g-0 border-bottom">
                            <div class="col-md-6">
                                <div class="p-3 d-flex justify-content-center align-items-center"> <span>Reference</span> </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 d-flex justify-content-center align-items-center"> <span>{{reference}}</span> </div>
                            </div>
                        </div>
                    
                    </div>
                </div>
                <div> </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
